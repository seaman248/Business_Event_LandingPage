.map
	text-align center
	padding em(20) em(10) em(10)
	._container
		gs('fluid')
	.map_wraper
		padding em(3)
		border 1px solid #eeeeee
	h3
		font-size em(38)
		font-weight 300
		margin 0 0 em(5)
	p
		font-size em(24)
		font-weight 300
		margin-bottom em(5)

+media-query( all, min-width 960px )
	.map
		._container
			gs('fixed')