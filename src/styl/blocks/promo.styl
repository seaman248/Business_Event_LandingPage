@import "kouto-swiss"

.promo::before
		content ''
		width 100%
		height 100%
		display block
		position absolute
		background-color rgba(45, 157, 231, 0.4)

.promo
	gs('fluid', 12)
	height 450px
	margin-top 60px
	background url(/images/promo.jpg)
	background-repeat no-repeat
	background-position center center
	position relative
