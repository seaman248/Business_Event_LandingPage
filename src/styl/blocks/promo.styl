@import "kouto-swiss"

.promo::after
	content ''
	width 100%
	height 100%
	display block
	position absolute
	background-color rgba(45, 157, 231, 0.4)

.promo
	gs('fluid', 12)
	height auto
	margin-top 60px
	background url(/images/promo.jpg)
	background-repeat no-repeat
	background-position center center
	position relative
	.container
		col(12)
		position relative
		z-index 20
	.promo-baner
		col(12)
		color white
		h1
			font-size em(38)
			text-align center
			padding em(7) 0
			font-weight 200
			border-bottom 1px solid white
		p
			font-size em(15)
			text-align center
			padding em(10) 0
		p.bold
			font-weight bold
	.promo-form
		background-color rgba(0, 0, 0, 0.1)
		col(11)
		offset(0.5)
		margin-top em(20)
		margin-bottom em(20)
		input, select, button
			col(11)
			offset(0.5)
			margin-top em(20)
			border-radius em(7)
			box-sizing border-box
			padding em(10)
			background-color rgba(0, 0, 0, 0.1)
			border 1px solid #FFFFFF
			color white
			font-size em(18)
			-webkit-appearance none
			outline none

		button
			margin-bottom em(20)
			cursor pointer
		
		button:hover
			background-color white
			color rgba(0, 0, 0, 0.9)

+media-query( all, min-width 900px)
	