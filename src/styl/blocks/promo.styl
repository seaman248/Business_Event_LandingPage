@import "kouto-swiss"
@import url(http://fonts.googleapis.com/css?family=Lato:300,700,900);

.promo
	padding-top 70px
	.container
		z-index -2
		position absolute
		color #ffffff
		background-image url('/images/promo.jpg')
		background-repeat no-repeat
		background-position center center
		width 100%
		gs('fluid', 100)

	.container::before
		z-index -1
		display block
		position absolute
		width 100%
		height 100%
		background-color rgba(45, 157, 231, 0.4)
		content ''
	.promo-banner
		col(80)
		offset(10)
		h1
			font-family 'Lato', sans-serif;
			font-weight 300
			font-size em(36)
			padding em(8) em(0) em(5)
			text-align center
			border-bottom 1px solid #fff
			b
				font-weight bold
		p
			font-family Helvetica
			font-size em(18)
			line-height 1.4
			font-weight 100
			text-align center
			margin em(20) em(0)

		p.bold
			font-weight bold

	.promo-form
		background-color rgba(0, 0, 0, 0.1)
		col(80)
		offset(10)
		input, select, button
			col(94)
			offset(3)
			margin-top em(20)
			padding em(12) em(15)
			box-sizing border-box
			font-size em(18)
			line-height 1.33
			border-radius em(6)
			color #ffffff
			border 1px solid #ffffff
			background-color rgba(0, 0, 0, 0.1)
			box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
			outline none
			transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

		option
			background-color rgba(0, 0, 0, 0.1)

		button
			margin-bottom em(20)
			cursor pointer

+media-query( all, min-width 900px)
	.promo
		.promo-banner
			col(40)
			offset(5)
			margin-top em(50)
			h1, p
				text-align left
				padding em(5)
		.promo-form
			col(30)
			offset(15)
			margin-top em(20)
			margin-bottom em(20)

+media-query( all, min-width 1900px)
	.promo
		.container
			col(80)
			offset(10)
			.promo-banner
				col(30)
				offset(10)
				margin-top em(50)