@import "kouto-swiss"

nav
	gs('fluid', 12)
	background-color #ffffff
	.container
		col(12)

	.logo
		col(5)
		padding em(12) em(5)

	.menu-toggle-button
		col(1)
		offset(5)
		padding em(12) em(10)
		float right

	.menu-toggle-button::before
		content '|||'
		float right
		display block
		border em(1) solid #929292
		background-color #F5F5F5
		color #929292
		border-radius em(6)
		height em(35)
		width em(38)
		box-sizing border-box
		cursor pointer
		padding-top em(7)
		padding-left em(12)


	.navbar
		col(12)
		border-top 1px solid #888888
		a
			width 100%
			display block
			padding em(15)
			text-decoration none
			color #888888
			text-align center

		a.active
			color #36d7b7

		a:hover
			color #333333