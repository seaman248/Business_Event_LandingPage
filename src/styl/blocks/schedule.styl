.schedule
	margin-top em(40)
	border-top 1px solid #eeeeee
	border-bottom 1px solid #eeeeee
	padding-top em(20)
	padding-bottom em(20)
	clearfix()
	._container
		gs('fluid', 12)
	h2
		font-size em(36)
		text-align center
	p.subHead
		font-size em(18)
		font-weight 200
		text-align center
		margin em(15) 0

	.tab-container
		.tab
			col(12)
			text-align center
			box-sizing border-box
			padding em(15)
			margin-bottom em(5)
			cursor pointer
			border-radius em(3)
			color #999999

		.tab.active
				background-color #eeeeee
				color #555555

		.tab:hover
			background-color #eeeeee
	.tab-panes
		col(12)
		padding em(20)
		box-sizing border-box
		background-color #eeeeee
		.tab-pane
			display none
			
		.active
			display block

	.accordion
		.panel-heading
			text-align center
			padding em(15)
			margin-bottom em(5)
			background-color #ffffff
			cursor pointer
			border-radius em(3)
			color #999999


+media-query( all, min-width 960px )
	.schedule
		._container
			gs('fixed', 12)
		.tab-container
			.tabs
				.tab
					col(4)
		.tab-panes
			col(12)