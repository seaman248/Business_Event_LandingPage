.lorem-carousel
	background-image url(../images/smiling-portraits.jpg)
	background-position center center
	background-repeat no-repeat
	height em(250)
	.container::before
		content ''
		display block
		background-color rgba(85, 85, 85, 0.9)
		width 100%
		height em(250)
		position absolute
	.container
		width 100%
		padding 0
	.carousel
		position relative
	.carousel-caption
		color #fff
		position relative
		right auto
		left auto
	.carousel-indicators
		top em(90)
		li
			width em(30)
	blockquote
		text-shadow: none;
		font-size em(22)
		font-weight 200
		border-left none
		footer
			color #fff